<h1 class="mb-4">Available Products</h1>

<% if @products.any? %>
  <div id="products" class="row row-cols-1 row-cols-md-3 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <%# Placeholder for product image (update if you have image support) %>
          <img src="https://via.placeholder.com/300" class="card-img-top" alt="<%= product.name %>">

          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text text-muted">
              <%= truncate(product.description, length: 100, separator: ' ') %>
            </p>
            <p class="card-text">
              <strong>Price:</strong> $<%= number_to_currency(product.current_price, unit: "", precision: 2) %>
            </p>
            <p class="card-text">
              <strong>Category:</strong> <%= product.category&.name || "Uncategorized" %>
            </p>
            <%= link_to "View Details", product_path(product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= paginate @products %> <%# Pagination links for products %>
  </div>
<% else %>
  <p class="text-muted">No products are available at the moment. Please check back later.</p>
<% end %>
