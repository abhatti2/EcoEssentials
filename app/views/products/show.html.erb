<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title"><%= @product.name %></h5>
    <p class="card-text text-muted"><%= @product.description %></p>

    <p class="card-text">
      <strong>Price:</strong> $<%= @product.current_price %>
    </p>

    <p class="card-text">
      <strong>Stock:</strong> <%= @product.stock_quantity %>
    </p>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning me-2" %>
  <%= link_to "Back to products", products_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this product?" } %>
</div>
