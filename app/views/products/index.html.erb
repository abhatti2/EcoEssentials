<%# Display flash notice messages %>
<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Products" %>

<h1 class="mb-4">Products</h1>

<%# Search form %>
<div class="mb-3">
  <%= form_with url: products_path, method: :get, local: true do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search products..." %>
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  <% end %>
</div>

<%# Products listing %>
<div id="products" class="row">
  <% if @products.any? %>
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%# Render partial for each product (e.g., app/views/products/_product.html.erb) %>
          <%= render product %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">
              <%= truncate(product.description, length: 100) %>
            </p>
            <p class="card-text">
              <strong>Price:</strong> $<%= product.current_price %>
            </p>
            <%= link_to "View Details", product_path(product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted">No products found.</p>
  <% end %>
</div>

<%# Pagination links %>
<div class="mt-4">
  <%= paginate @products %>
</div>

<%# New product link (visible only to admins, add authentication check if necessary) %>
<div class="mt-3">
  <%= link_to "New Product", new_product_path, class: "btn btn-success" %>
</div>
