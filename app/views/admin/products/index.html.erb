<h1 class="mb-4 text-center">Manage Products</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
  <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-success" %>
  <p class="text-muted mb-0">Total Products: <%= pluralize(@products.size, "product") %></p>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-dark text-center">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @products.any? %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= truncate(product.description, length: 50) %></td>
          <td>$<%= number_to_currency(product.current_price, unit: "") %></td>
          <td><%= product.stock_quantity %></td>
          <td class="text-center">
            <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-primary btn-sm me-2", title: "Edit #{product.name}" %>
            <%= button_to "Delete", admin_product_path(product), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete #{product.name}?" }, title: "Delete #{product.name}" %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5" class="text-center text-muted">No products found. Please add a new product.</td>
      </tr>
    <% end %>
  </tbody>
</table>
