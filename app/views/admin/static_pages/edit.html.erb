<h1>Edit Static Page</h1>
<%= form_with model: @static_page, url: admin_static_page_path(@static_page), local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :slug, class: "form-label" %>
    <%= f.text_field :slug, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 10, class: "form-control" %>
  </div>
  <%= f.submit "Save Changes", class: "btn btn-success" %>
  <%= link_to "Cancel", admin_static_pages_path, class: "btn btn-secondary" %>
<% end %>
