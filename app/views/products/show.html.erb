<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title text-primary"><%= @product.name %></h5>
    <p class="card-text text-muted"><%= simple_format(@product.description) %></p>

    <p class="card-text">
      <span class="fw-bold">Price:</span> $<%= number_to_currency(@product.current_price, unit: "", precision: 2) %>
    </p>

    <p class="card-text">
      <span class="fw-bold">Stock:</span> <%= @product.stock_quantity %> available
    </p>
  </div>
</div>

<div class="mt-3 d-flex align-items-center">
  <% if current_admin_user %>
    <%= link_to "Edit Product", edit_admin_product_path(@product), class: "btn btn-warning me-2" %>
    <%= button_to "Delete Product", admin_product_path(@product), method: :delete, class: "btn btn-danger me-2", data: { confirm: "Are you sure you want to delete this product?" } %>
  <% end %>
  <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
</div>
